<script>
function search(searchTerm,searchCount,searchPage)
{
var url = "display_results?search=" + searchTerm + "&count=" + searchCount + "&page=" + searchPage
console.log(url);
window.open(url);
}
</script>

<h1>Search Results for: <%= @search %> </h1>
  <% @books.each do |book| %>
  <p><%= book.title %> by <%= book.authors %></p>
  <img src=<%=book.image_link %> />
  <p>ISBN: <%= book.isbn %>
    <button id="add" type="submit">Add to favourites</button>
  </p>
  <hr />
  <% end %>
  <button id="next" action="/display_results" onclick="search('<%=@search%>','<%=@count%>','<%=@page+1%>')" type="submit">Next </button>
