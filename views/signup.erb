<h1>Sign Up</h1>

<% if @new_user %>
  <% if @new_user.errors %>
    <ul>
      <% @new_user.errors.each do |e| %>
        <li><%= e.first %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<form action='/signup' method='post'>

  <label for='first_name'>First Name</label>
  <input id='first_name' type='text' name='first_name' value='<%= @new_user ? @new_user.first_name : "" %>'/>

  <label for='last_name'>Last Name</label>
  <input id='last_name' type='text' name='last_name' value='<%= @new_user ? @new_user.last_name : "" %>'/>

  <label for='email'>Email</label>
  <input id='email' type='text' name='email' value='<%= @new_user ? @new_user.email : "" %>'/>

  <label for='password'>Password</label>
  <input id='password' type='password' name='password'/>

  <label for='password_confirmation'>Password Confirmation</label>
  <input id='password_confirmation' type='password' name='password_confirmation'/>

  <input type="submit" value="Sign Up"/>

</form>


